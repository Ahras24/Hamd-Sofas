<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Hamd Sofas - Home</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/public/user/css/navbar.css">
  
</head>
<body>

    <div class="navbar">
        <div class="navbar-top">
          <div class="brand-and-menu">
            <div class="navbar-brand">HAMD SOFAS</div>
            <div class="menu-box">
              <a href="/user/home">Home</a>
              <a href="/user/shop">Shop</a>
              <a href="/user/FAQs">FAQs</a>
            </div>
          </div>
      
          
<div class="navbar-actions">

  <% if (user) { %>
    <a href="/user/user-account" class="action-item">
      <div class="icon-wrapper">
        <i class="fas fa-user"></i>
      </div>
      <span class="action-label"><%= user.username %></span>
    </a>
  <% } else { %>
    <a href="/user/login" class="action-item">
      <div class="icon-wrapper">
        <i class="fas fa-user"></i>
      </div>
      <span class="action-label">Login</span>
    </a>
  <% } %>

  <% if (typeof wishlistCount !== "undefined") { %> 
  <a href="/user/wishlist" class="action-item">
    <div class="icon-wrapper">
      <i class="fas fa-heart"></i>
         <span class="count-badge"><%= wishlistCount || 0 %></span>
    </div>
    <span class="action-label">Wishlist</span>
  </a>
  <% } %>

  <a href="/user/cart" class="action-item">
    <div class="icon-wrapper">
      <i class="fas fa-shopping-cart"></i>
      <span class="count-badge"><%= cartCount || 0 %></span>
    </div>
    <span class="action-label">Cart</span>
  </a>

</div>

        </div>
      </div>


</body>
</html>
